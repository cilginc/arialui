{
  "manifest_version": 3,
  "name": "AriaLUI Integration",
  "version": "1.0",
  "description": "Download with AriaLUI",
  "permissions": [
    "downloads",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "cookies"
  ],
  "host_permissions": ["http://localhost:6801/*", "<all_urls>"],

  "browser_specific_settings": {
    "gecko": {
      "id": "arialui-integration@cilginc.dev",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
